      <script>
        document.addEventListener("DOMContentLoaded", function () {
          const fromSelect = document.getElementById('from');
          const toSelect = document.getElementById('to');
          const fixedFromSelect = document.getElementById('fixedFrom');
          const fixedToSelect = document.getElementById('fixedTo');


          const selectedFixedFrom = fixedFromSelect?.dataset.selected || "";
          const selectedFixedTo = fixedToSelect?.dataset.selected || "";

          fetch('https://raw.githubusercontent.com/jbrooksuk/JSON-Airports/master/airports.json')
