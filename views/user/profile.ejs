<script>
    document.addEventListener("DOMContentLoaded", async () => {
      const nationalitySelect = document.getElementById("nationality");
      const userSelectedNationality = "<%= userDetails.nationality || '' %>";
  
      try {
        const response = await fetch("/api/countries");
        const countries = await response.json();
  
        // Optional debug
        console.log("Fetched countries:", countries);
  
        countries.forEach(country => {
          const option = document.createElement("option");
          option.value = country;
          option.textContent = country;
  
          if (country === userSelectedNationality) {
            option.selected = true;
          }
  
          nationalitySelect.appendChild(option);
        });
      } catch (err) {
        console.error("Error fetching countries:", err);
      }
    });
</script>
  
  <script>
document.addEventListener("DOMContentLoaded", function () {
  const toggleIcons = document.querySelectorAll(".fakepasswordicon");

  toggleIcons.forEach(icon => {
    icon.addEventListener("click", () => {
      const input = icon.closest(".input-group").querySelector("input");

      if (input.type === "password") {
        input.type = "text";
        icon.classList.remove("fa-eye-slash");
        icon.classList.add("fa-eye");
      } else {
        input.type = "password";
        icon.classList.remove("fa-eye");
        icon.classList.add("fa-eye-slash");
      }
    });
  });
});
</script>

