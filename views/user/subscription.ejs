<%- include('./partials/header') %>
    <%- include('./partials/userHeader') %>

        <!-- **************** MAIN CONTENT START **************** -->
        <main>

            <!-- ======================= Content START -->
            <section class="pt-3">
                <div class="container">
                    <div class="row">

                        <%- include('./partials/userSidebar') %>

                            <!-- Main content START -->
                            <div class="col-lg-8 col-xl-9">

                                <!-- Offcanvas menu button -->
                                <div class="d-grid mb-0 d-lg-none w-100">
                                    <button class="btn btn-primary mb-4" type="button" data-bs-toggle="offcanvas"
                                        data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
                                        <i class="fas fa-sliders-h"></i> Menu
                                    </button>
                                </div>
                                <!-- Offcanvas menu button END -->

                                <div class="row g-4">
                                    <div class="col-md-4">
                                        <div class="card h-100 shadow-sm border-0">
                                            <div class="card-body text-center">
                                                <h5 class="card-title fw-bold mb-3">Free Plan</h5>
                                                <p class="text-muted mb-4">Limited Access</p>
                                                <p class="mb-1"><strong class="fs-4">20</strong> Bookings/Month</p>
                                                <p class="mb-1"><strong class="fs-4">2 Lakh</strong> Transactions</p>
                                                <ul class="list-unstyled text-start mt-4">
                                                    <li><i class="fas fa-check text-success me-2"></i> Email Support
                                                    </li>
                                                    <li><i class="fas fa-check text-success me-2"></i> Quick Purchase
                                                    </li>
                                                    <li><i class="fas fa-times text-danger me-2"></i> Exclusive Offers
                                                    </li>
                                                    <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                                        Minimum KYC</li>
                                                    <li><i class="fas fa-tools text-muted me-2"></i> Limited Action
                                                        Tools</li>
                                                </ul>

                                                <% if (userDetails.subscription.subscription==='Free' ) { %>
                                                    <button class="btn btn-outline-primary w-100 mt-4" disabled>Current
                                                        Plan</button>
                                                    <% } else if (userDetails.subscription.subscription==='Pro'
                                                        || 'Enterprise' ) { %>
                                                        <button class="btn btn-primary w-100 mt-4"
                                                            disabled>Purchased</button>
                                                        <% } else { %>
                                                            <button class="btn btn-primary w-100 mt-4">Upgrade to
                                                                Free</button>
                                                            <% } %>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="card h-100 shadow-sm border-0">
                                            <div class="card-body text-center">
                                                <h5 class="card-title fw-bold mb-3">Pro Plan</h5>
                                                <p class="text-muted mb-4">Enhanced Features</p>
                                                <p class="mb-1"><strong class="fs-4">100</strong> Bookings/Month</p>
                                                <p class="mb-1"><strong class="fs-4">20 Lakh</strong> Transactions</p>
                                                <ul class="list-unstyled text-start mt-4">
                                                    <li><i class="fas fa-check text-success me-2"></i> All Free Plan
                                                        Features</li>
                                                    <li><i class="fas fa-check text-success me-2"></i> Exclusive Offers
                                                    </li>
                                                    <li><i class="fas fa-check text-success me-2"></i> Access Special
                                                        Fares</li>
                                                    <li><i class="fas fa-check text-success me-2"></i> Enhanced Support
                                                    </li>
                                                    <li><i class="fas fa-check text-success me-2"></i> Special Bids
                                                        Opportunity</li>
                                                    <li><i class="fas fa-shield-alt text-success me-2"></i> Full KYC
                                                        Badge</li>
                                                    <li><i class="fas fa-tools text-success me-2"></i> Booking Action
                                                        Tools</li>
                                                </ul>
                                                <p class="mb-1 mt-1"><strong class="fs-4 text-dark">₹ 100</strong></p>

                                                <% if (userDetails.subscription.subscription==='Pro' ) { %>
                                                    <button class="btn btn-outline-primary w-100 mt-4" disabled>Current
                                                        Plan</button>
                                                    <% } else if (userDetails.subscription.subscription==='Enterprise' )
                                                        { %>
                                                        <button class="btn btn-primary w-100 mt-4"
                                                            disabled>Purchased</button>
                                                        <% } else { %>
                                                            <button class="btn btn-primary w-100 mt-4"
                                                                onclick="proBtn()">Upgrade to Pro</button>
                                                            <% } %>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="card h-100 shadow-sm border-0">
                                            <div class="card-body text-center">
                                                <h5 class="card-title fw-bold mb-3">Enterprise</h5>
                                                <p class="text-muted mb-4">Unlimited Power</p>
                                                <p class="mb-1"><strong class="fs-4">Unlimited</strong> Bookings</p>
                                                <p class="mb-1"><strong class="fs-4">Unlimited</strong> Transactions</p>
                                                <ul class="list-unstyled text-start mt-4">
                                                    <li><i class="fas fa-check text-success me-2"></i> All Pro Plan
                                                        Features</li>
                                                    <li><i class="fas fa-check text-success me-2"></i> Special Fares
                                                    </li>
                                                    <li><i class="fas fa-gift text-success me-2"></i> Milestone Rewards
                                                    </li>
                                                    <li><i class="fas fa-user-shield text-success me-2"></i> VIP Support
                                                    </li>
                                                    <li><i class="fas fa-percent text-success me-2"></i> Reduced Charges
                                                    </li>
                                                    <li><i class="fas fa-shield-alt text-success me-2"></i> Full KYC
                                                        Badge</li>
                                                    <li><i class="fas fa-money-bill-alt text-success me-2"></i> Reduced
                                                        Booking Fees</li>
                                                </ul>
                                                <p class="mb-1 mt-1"><strong class="fs-4 text-dark">₹ 1000</strong></p>

                                                <% if (userDetails.subscription.subscription==='Enterprise' ) { %>
                                                    <button class="btn btn-outline-primary w-100 mt-4" disabled>Current
                                                        Plan</button>
                                                    <% } else { %>
                                                        <button class="btn btn-primary w-100 mt-4"
                                                            onclick="enterpriseBtn()">Upgrade to Enterprise</button>
                                                        <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                    </div>
                    <!-- Main content END -->

                </div>
                </div>
            </section>
            <!-- ======================= Content END -->

            <script>
                async function proBtn() {
                    const subscription = "Pro";
                    try {
                        const response = await fetch("/subscription",
                            {
                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify({ subscription })
                            });

                        if (!response.ok) {
                            alert("Failed to fetch subscription details");
                            return;
                        }

                        const data = await response.json();
                        window.location.href = data.redirectUrl;

                    } catch (error) {
                        console.error("Error:", error);
                        alert("An error occurred.");
                    }
                }

                async function enterpriseBtn() {
                    const subscription = "Enterprise";
                    try {
                        const response = await fetch("/subscription",
                            {
                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify({ subscription })
                            });

                        if (!response.ok) {
                            alert("Failed to fetch subscription details");
                            return;
                        }

                        const data = await response.json();
                        window.location.href = data.redirectUrl;

                    } catch (error) {
                        console.error("Error:", error);
                        alert("An error occurred.");
                    }
                }
            </script>
        </main>
        <!-- **************** MAIN CONTENT END **************** -->

        <%- include('./partials/footer') %>