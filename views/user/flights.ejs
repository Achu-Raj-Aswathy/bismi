                                <!-- Cabin Baggage Icon with Tooltip -->
                                <i class="fa-solid fa-briefcase" data-bs-toggle="tooltip" data-bs-placement="top"
                                  title="Cabin: <%= flight.baggage?.adult?.cabin?.pieces %> pcs, <%= flight.baggage?.adult?.cabin?.weightPerPiece %> kg each">
                                </i>
                                <!-- Check-in Baggage Icon with Tooltip -->
                                <i class="fa-solid fa-suitcase-rolling" data-bs-toggle="tooltip" data-bs-placement="top"
                                  title="Check-in: <%= flight.baggage?.adult?.checkIn?.numberOfPieces %> pcs, <%= flight.baggage?.adult?.checkIn?.weightPerPiece %> kg each">
                                </i>
                                <!-- Seats Icon with Tooltip -->
                                <img src="/assets/images/element/seat.png" alt="seats" height="15px" width="15px"
                                  data-bs-toggle="tooltip" data-bs-placement="top"
                                  title="Seats Available: <%= flight.inventoryDates?.[0]?.seats %>">
                              </div>

                              <div style="margin-top: 10px;">
                                <li class="list-inline-item text-success">
                                  <%= flight.refundable ? 'Refundable' : 'Non-refundable' %>
                                </li>
                              </div>
                            </div>

                            <!-- Price -->
                            <div class="col-sm-4 col-md-3">
                              <!-- Price -->
                              <h4>â‚¹ <%= flight.inventoryDates[0].fare.adults %>
                              </h4>
                            </div>

                            <div class="col-sm-4 col-md-3">
                              <button class="btn btn-dark"
                                onclick='bookNow("<%= agent._id %>", "<%= flight._id %>")'>Book Now</button>
                            </div>

                          </div>
                        </div>
                        <!-- card-body END -->

                      </div>
                      <!-- Ticket item END -->
                      <% }) %>
                        <% } else { %>
